{
	"name": "personal-site",
	"version": "0.1.0",
	"private": true,
	"description": "Sean Kilgarriff's personal website",
	"scripts": {
		"start": "webpack-dev-server --config webpack.config.dev.js",
		"clean:dist": "rm -rf dist",
		"build": "BABEL_ENV=production NODE_ENV=production webpack",
		"lint:js": "eslint src",
		"lint:css": "stylelint \"src/**/*.css\"",
		"lint": "npm run lint:js && npm run lint:css",
		"test": "NODE_ENV=test nyc mocha \"src/**/*.spec.js\"",
		"test:watch": "npm run test -- --reporter min --watch",
		"coverage": "nyc report --reporter=text-lcov > coverage.lcov",
		"flow": "flow; test $? -eq 0 -o $? -eq 2"
	},
	"dependencies": {
		"autoprefixer": "^6.5.3",
		"babel-core": "^6.17.0",
		"babel-eslint": "^7.0.0",
		"babel-loader": "^6.2.5",
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-istanbul": "^3.0.0",
		"babel-plugin-react-intl": "^2.2.0",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
		"babel-plugin-transform-runtime": "^6.15.0",
		"babel-preset-es2015": "^6.18.0",
		"babel-preset-react": "^6.16.0",
		"babel-preset-react-hmre": "^1.1.1",
		"babel-preset-react-optimize": "^1.0.1",
		"babel-preset-stage-0": "^6.16.0",
		"babel-runtime": "^6.20.0",
		"brotli-webpack-plugin": "^0.1.2",
		"case-sensitive-paths-webpack-plugin": "^1.1.4",
		"chai": "^3.5.0",
		"classnames": "^2.2.5",
		"compression-webpack-plugin": "^0.4.0",
		"copy-webpack-plugin": "^4.0.1",
		"css-loader": "^0.26.1",
		"cssnano": "^3.9.1",
		"enzyme": "^2.6.0",
		"eslint": "^3.12.2",
		"eslint-config-airbnb": "^13.0.0",
		"eslint-loader": "^1.6.1",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-jsx-a11y": "v2.2.3",
		"eslint-plugin-react": "^6.8.0",
		"extract-text-webpack-plugin": "2.0.0-rc.3",
		"fingerprintjs2": "^1.4.1",
		"html-webpack-plugin": "^2.24.1",
		"istanbul": "1.0.0-alpha.2",
		"jsdom": "^9.8.3",
		"mocha": "^3.2.0",
		"normalize.css": "^5.0.0",
		"nyc": "next",
		"offline-plugin": "^4.5.3",
		"open-color": "^1.4.0",
		"postcss-loader": "^1.2.1",
		"postcss-reporter": "^3.0.0",
		"postcss-smart-import": "^0.6.3",
		"precss": "^1.4.0",
		"react": "^15.4.2",
		"react-addons-css-transition-group": "^15.4.1",
		"react-addons-test-utils": "^15.4.1",
		"react-dom": "^15.4.2",
		"react-ga": "^2.1.2",
		"react-heatmapjs": "1.2.1",
		"react-hot-loader": "^3.0.0-beta.5",
		"react-intl": "^2.2.0",
		"react-router": "v4.0.0-alpha.6",
		"react-title-component": "^1.0.1",
		"react-user-focus": "1.3.5",
		"sitemap-webpack-plugin": "^0.1.1",
		"source-map-loader": "^0.1.5",
		"style-loader": "^0.13.1",
		"stylelint": "^7.6.0",
		"stylelint-config-standard": "^15.0.0",
		"webpack": "2.2.1",
		"webpack-dev-server": "v2.2.0-rc.0"
	},
	"nyc": {
		"include": [
			"src/**/*.js"
		],
		"exclude": [
			"src/**/*.spec.js"
		],
		"require": [
			"babel-register"
		],
		"reporter": [
			"lcov",
			"text-summary"
		],
		"all": true,
		"sourceMap": false,
		"instrument": false
	},
	"stylelint": {
		"extends": "stylelint-config-standard"
	}
}
